{
  "type": "module",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -C packages/core dev",
    "lint": "eslint --cache . && oxlint",
    "prepublishOnly": "pnpm -C packages/core build",
    "release": "bumpp -r",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "pnpm -C packages/core postinstall && npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": ""
  }
}
