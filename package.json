{
  "type": "module",
  "version": "0.1.6",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "build": "pnpm -r --filter='!playground' run build",
    "build:shared": "pnpm -C packages/shared build",
    "dev": "pnpm -C packages/core dev",
    "lint": "eslint --cache . && oxlint",
    "prepublishOnly": "pnpm -C packages/core build",
    "play": "pnpm -C playground dev",
    "release": "bumpp -r",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "npx simple-git-hooks",
    "oxlint-inspector": "pnpm -C packages/core oxlint-inspector"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-oxlint": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
