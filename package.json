{
  "type": "module",
  "name": "@oxc-inspector/monorepo",
  "version": "0.2.3",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "build": "pnpm -r --filter='!playground' run build",
    "build:shared": "pnpm -C packages/shared build",
    "dev": "pnpm -C packages/core dev",
    "lint": "oxlint && oxfmt --check",
    "lint:fix": "oxlint --fix && oxfmt",
    "prepublishOnly": "pnpm -C packages/core build",
    "play": "pnpm -C playground dev",
    "release": "bumpp -r",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "npx simple-git-hooks",
    "oxc-inspector": "pnpm -C packages/core oxc-inspector"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "pncat": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "oxfmt": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,vue}": [
      "pnpm oxlint --fix"
    ],
    "*.{js,ts,mjs,cjs,vue,json,yml,md,html,css}": [
      "pnpm oxfmt"
    ]
  }
}
