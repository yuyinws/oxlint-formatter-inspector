{
  "type": "module",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "build": "nr --filter oxlint-fi build",
    "build:client": "nr --filter client-app build",
    "dev": "nr --filter oxlint-fi dev",
    "dev:client": "nr --filter client-app dev",
    "lint": "eslint --cache .",
    "prepublishOnly": "nr --filter oxlint-fi build",
    "release": "bumpp -r && pnpm -r publish",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "nr --filter client-app postinstall && npx simple-git-hooks",
    "start": "eslint -c eslint.fixtures.config.js -f i tests/fixtures",
    "build:static": "nr build && INSPECTOR_MODE=build nr start"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.14.1",
    "@antfu/ni": "^24.3.0",
    "@types/node": "^22.15.17",
    "bumpp": "^10.1.0",
    "eslint": "^9.29.0",
    "eslint-plugin-oxlint": "^1.1.0",
    "gunshi": "^0.26.3",
    "lint-staged": "^16.0.0",
    "oxlint": "catalog:",
    "pnpm": "^10.11.0",
    "simple-git-hooks": "^2.13.0",
    "tsdown": "^0.11.9",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vue-tsc": "^2.2.10"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
