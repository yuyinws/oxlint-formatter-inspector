{
  "type": "module",
  "name": "oxc-inspector",
  "version": "0.0.0",
  "packageManager": "pnpm@10.29.2",
  "description": "Inspect and understand your Oxlint toolchain better.",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./vite": "./dist/vite.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "oxc-inspector": "./bin/oxc-inspector.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:client": "pnpm -C client dev",
    "build": "tsdown && pnpm build:client",
    "build:client": "pnpm -C client run build",
    "lint": "oxlint && oxfmt --check",
    "lint:fix": "oxlint --fix && oxfmt",
    "prepublishOnly": "pnpm build",
    "play": "pnpm -C playground dev",
    "release": "bumpp -r",
    "typecheck": "vue-tsc --noEmit",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "ansis": "catalog:",
    "consola": "catalog:",
    "get-port-please": "catalog:",
    "gunshi": "catalog:",
    "pathe": "catalog:",
    "h3": "catalog:prod",
    "@vitejs/devtools-rpc": "catalog:build",
    "@vitejs/devtools-kit": "catalog:",
    "tinyexec": "catalog:node"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "lint-staged": "catalog:",
    "oxlint": "catalog:",
    "pncat": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "oxfmt": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,vue}": [
      "pnpm oxlint --fix"
    ],
    "*.{js,ts,mjs,cjs,vue,json,yml,md,html,css}": [
      "pnpm oxfmt"
    ]
  }
}
